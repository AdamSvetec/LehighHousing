<!DOCTYPE html>
<HTML>

<head>
	<script src="/js/jquery-3.1.1.min.js"></script>
	<script src="/js/common.js"></script>
	<link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
	<link rel="stylesheet"  href="/stylesheets/index.css">

	<!-- Star rating libraries -->
	<script src="/js/jquery.rateyo.min.js"></script>
  	<link rel="stylesheet" href="/stylesheets/jquery.rateyo.min.css">
  	
  	<title><%= landlord.name %></title>
</head>
<body>
	<h1>Landlord</h1>
	<h2>Name: <%= landlord.name %></h2>
	<% if(landlord.phone_num){ %> <h2>Phone Number: <%= landlord.phone_num %></h2> <% } %>
	<% if(landlord.email){ %> <h2>Email: <%= landlord.email %></h2> <% } %>
	<% if(landlord.website){ %> <h2>Website: <%= landlord.website %></h2> <% } %>
	<% var leniency_total=0,fairness_total=0,repairs_total=0; 
		landlord.reviews.forEach(function (review) { 
			leniency_total+=review.leniency_rating; 
			fairness_total+=review.fairness_rating; 
			repairs_total+=review.repair_rating; 
		}); 
	%>

	<h2>Leniency: <%= leniency_total/landlord.reviews.length %> </h2>
	<h2>Fairness: <%= fairness_total/landlord.reviews.length %> </h2>
	<h2>Repairs: <%= repairs_total/landlord.reviews.length %></h2>

	<h1>Houses:</h1>
	<% for(i=0; i < houses.length; i++){ %>
		<h2><%= houses[i].address %></h2>
		<h3>Bedrooms: <%= houses[i].bedroom_cnt %></h3>
		<h3>Bathrooms: <%= houses[i].bathroom_cnt %></h3>
		<h3>Parking Spots: <%= houses[i].parking_spot_cnt %></h3>
		<h3>Room Size: <%= houses[i].room_size_rating %></h3>
		<h3>Cleanliness: <%= houses[i].cleanliness_rating %></h3>
		<h3>Overall Rating: <%= houses[i].overall_rating %></h3>
	<% } %>
</body>
</HTML>